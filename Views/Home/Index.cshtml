@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 row">
    <div class="col-sm-8"></div>
    <div class="col-sm-4">
        <a class="btn btn-primary" href="/professional_profile">MyProfile</a>
        <a class="btn btn-primary" href="/logout">LogOut</a>
    </div>
</div>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        Users you may want to connect with:
    </div>
    <div class="col-sm-2"></div>

</div>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
         <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var perdorues in ViewBag.perdoruesit)
                {
                    <tr>
                        <td><a href="/users/@perdorues.UserId">@perdorues.FirstName</a></td>
                        <td><a href="/SendR/@perdorues.UserId">Connect</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-2"></div>

</div>

